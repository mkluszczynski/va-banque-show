# Build stage
FROM node:22-alpine AS builder

WORKDIR /app

# Create apps/web directory and copy its package.json
COPY package.json .

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build application
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built static files from builder to nginx
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
